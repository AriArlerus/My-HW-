import java.util.Scanner;
public class SeriesFormula {
    public static void main(String args[]) {
      Scanner input = new Scanner (System.in);
      
      System.out.print("a1 = ");
      int a1 = input.nextInt();
      System.out.print("an = ");
      int an = input.nextInt();
      
      double sum = 0;
      int n = (an-a1)+1;
      
      sum = n*((a1+an)/2);
                
            System.out.print(Math.round(sum));
    }
}
