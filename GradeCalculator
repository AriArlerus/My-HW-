import java.util.Scanner;
public class GradeCalculator {
    public static void main(String args[]) {
        
        Scanner input = new Scanner (System.in);
        System.out.println("score1");
        int score1 = input.nextInt();
        System.out.println("score2");
        int score2 = input.nextInt();
        System.out.println("score3");
        int score3 = input.nextInt();
        System.out.println("score4");
        int score4 = input.nextInt();
        System.out.println("score5");
        int score5 = input.nextInt();
        
        double score = (score1+score2+score3+score4+score5)/5;
        System.out.println("The student's average grade is" +score);
        
        if (score >= 90 && score <= 100) 
        System.out.println("The student's letter grade is A");
        else if (score >= 80) 
        System.out.println("The student's letter grade is B");
        else if (score >= 70) 
        System.out.println("The student's letter grade is C");
        else if (score >= 60) 
        System.out.println("The student's letter grade is D");
        else System.out.println("The student's letter grade is F");
      
    }
}
