import java.util.Scanner;
public class Sum2 {
    public static void main(String args[]) {
      Scanner input = new Scanner (System.in);
      
      System.out.print("");
      int n = input.nextInt();
      System.out.print("");
      int m = input.nextInt();
      
      int sum = 0;
      
      if ( m > n ){
        for (int i = n; i <= m; i++) 
            {
                sum += i;
            }
                
                System.out.print(sum);
      }
    }
}
